{
  "languageserver": {
    "digestif": {
      "command": "digestif",
      "filetypes": ["tex", "plaintex", "context"]
    },
    "arduino": { 
      "command": "~/go/bin/arduino-language-server",
      "rootPatterns": ["*.ino"],
      "filetypes": ["arduino"],
      "args": [
        "-cli", "/home/alvaro9rqc/.arduino15/bin/arduino-cli",
        "-clangd", "/usr/bin/clangd",
        "-cli-config", "/home/alvaro9rqc/.arduino15/arduino-cli.yaml",
        "-fqbn", "arduino:avr:uno"
      ],
      "disabledFeatures": ["semanticTokens"]
    }
  },
  "snippets.ultisnips.directories": [
    "~/.config/nvim/UltiSnips"  // Cambia esto por el directorio donde guardes tus snippets
  ],
  "snippets.ultisnips.pythonPrompt": false
}

